<% include partials/header %>
  <div class="aakash">
    <div class="ui main text container" style="font-family:Comfortaa;">
      <div class="ui segment">
        <div class="ui huge gray header" style="font-family:Comfortaa; font-size:3em;">
          <%= data.Title %>
        </div>
      </div>
      <div class="ui huge right aligned header">
        <span class="star-imdb"><i class="star half empty icon"></i>
            <span class="imdbRating1">
                <%=data.imdbRating%>
                <span class="out10">/10<i class="imdb icon" style="color:#749CC7;"></i></span>
        </span>
        </span>
      </div>
      <div class="ui top attached segment">
        <div class="ui top attached">
          <div class="ui two column grid">
            <div class="row">
              <div class="item column">
                <img class="ui rounded image" src="<%= data.Poster %>">
                <center>
                  <br>
                  <hr style="opacity:0.7;">
                  <br>
                  <% if(msg=="movielinksavail"){ %>
                  <button class="ui blue large button">
                    <i class="download icon" style="font-size:1em; color: white; margin-right:14px;"></i>
                    <a href="<%= urldata['720p'].url %>" class="" style="color:white; font-family:Comfortaa;">Download Movie in 720p</a>
                  </button>
                  <br><br>
                  <button class="ui green large button">
                    <i class="download icon" style="font-size:1em; color: white;"></i>
                    <a href="<%= urldata['1080p'].url %>" class="" style="color:white; font-family:Comfortaa;">Download Movie in 1080p</a>
                  </button>
                  <% } else if(msg=="movielinksnoavail"){ %>
                  <button class="ui blue disabled large button">
                    <i class="download icon" style="font-size:1em; color: white; margin-right:14px;"></i>
                    <a href="" class="" style="color:white; font-family:Comfortaa;">No download links</a>
                  </button>
                  <% } else if(msg=="noserieslinks"){ %>
                  <button class="ui blue disabled large button">
                    <i class="download icon" style="font-size:1em; color: white; margin-right:14px;"></i>
                    <a href="" class="" style="color:white; font-family:Comfortaa;">No download links</a>
                  </button>
                  <% } %>
                </center>
              </div>
              <div class="column movie-content">
                <div class="description">
                  <p><i class="calendar icon" style="font-size:1.4em; color: #1DE9B6;"></i> <b>Date of Release</b> :- <span style="color: #424242;"><%= data.Released %></span></p>
                  <p><i class="hourglass start icon" style="font-size:1.4em; color: #FFAB40;"></i> <b>Run Time</b> :- <span style="color: #424242;"><%= data.Runtime %></span></p>
                  <p><b>Genre</b> :- <span style="color: #424242;"><%= data.Genre %></span></p>
                  <p><b>Box Office Collection</b> :- <span style="color: #424242;"><%= data.BoxOffice %></span></p>
                  <hr>
                  <span><i class="tag icon" style="color: #FF8A80;"></i>Plot<span>
                            <br>
                            <span><%=data.Plot%></span>
                  <hr>
                  <span style="color: #3E2723;"><i class="users icon" style="font-szie: 1em; color:#C51162;"></i>Actors</span>
                  <p>
                    <%= data.Actors%>
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <% include partials/footer %>
